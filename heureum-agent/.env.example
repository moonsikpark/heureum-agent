# Application
APP_NAME=Heureum Agent
DEBUG=false

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# LangChain (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=

# Google Gemini â€” pick ONE of the two options:
# Option 1: Google AI Studio (simple, just an API key)
GOOGLE_API_KEY=your-google-api-key-here
# Option 2: Vertex AI (GCP service account)
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GOOGLE_CLOUD_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=./your-service-account.json

# Agent Configuration (use "gemini-3-flash-preview" for Vertex AI, "gpt-4o-mini" for OpenAI)
AGENT_MODEL=gemini-3-flash-preview
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8001
